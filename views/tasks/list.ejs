<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>

<div class="container mt-4">
    <!-- Page Title + Add Button -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="display-5">Assignments</h1>
        <a href="/tasks/add" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Add Assignment
        </a>
    </div>

    <!-- Search + Sort -->
    <div class="mb-3 d-flex justify-content-between">
        <form class="d-flex" method="GET" action="/">
            <input type="text" name="search" placeholder="Search assignments..." class="form-control me-2">
            <button class="btn btn-primary">Search</button>
        </form>

        <div>
            <a href="/tasks/list?sort=title" class="btn btn-outline-secondary btn-sm">Sort by Title</a>
            <a href="/tasks/list?sort=dueDate" class="btn btn-outline-secondary btn-sm">Sort by Due Date</a>
            <a href="/tasks/list?sort=status" class="btn btn-outline-secondary btn-sm">Sort by Status</a>
        </div>
    </div>

    <% if (tasks.length === 0) { %>
        <div class="alert alert-info text-center">
            No assignments found. Click <strong>Add Assignment</strong> to create your first one!
        </div>
    <% } else { %>
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Due Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% tasks.forEach(task => { %>
                    <tr>
                        <td><%= task.title %></td>
                        <td><%= task.description %></td>
                        <td><%= task.dueDate %></td>
                        <td>
                            <select class="status-select form-select">
                                <option <%= task.status === 'Not Started' ? 'selected' : '' %>>Not Started</option>
                                <option <%= task.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                                <option <%= task.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                            </select>
                        </td>
                        <td>
                            <a href="/tasks/edit/<%= task._id %>" class="btn btn-primary btn-sm">Edit</a>
                            <form action="/tasks/delete/<%= task._id %>" method="POST" class="d-inline" onsubmit="return confirmDelete()">
                                <button class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                        <script>
                            function confirmDelete() {
                                return confirm("Are you sure you want to delete this assignment?");
                            }
                        </script>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
</div>

<%- include('../partials/footer.ejs') %>