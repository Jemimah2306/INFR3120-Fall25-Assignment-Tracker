<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <!-- Page Title -->
            <h1 class="display-5"><%= title %></h1>
            <!-- Edit Assignment Form -->
            <form method="post">
                <!-- Assignment Title Input -->
                <div class="form-group mb-3">
                    <label for="assignmentTitle">Assignment Title</label>
                    <!-- Pre-fill input with current task title -->
                    <input type="text" class="form-control" id="assignmentTitle" placeholder="Enter assignment title"
                        name="title" value="<%= task.title %>" required>
                </div>

                <!-- Assignment Description Input -->
                <div class="form-group mb-3">
                    <label for="assignmentDescription">Description</label>
                    <!-- Pre-fill input with current task description -->
                    <input type="text" class="form-control" id="assignmentDescription" placeholder="Enter description"
                        name="description" value="<%= task.description %>" required>
                </div>

                <!-- Assignment Due Date Input -->
                <div class="form-group mb-3">
                    <label for="assignmentDueDate">Due Date</label>
                    <!-- Pre-fill input with current task due date -->
                    <input type="date" class="form-control" id="assignmentDueDate" name="dueDate" value="<%= task.dueDate %>" required>
                </div>

                <!-- Assignment Status Dropdown -->
                <div class="form-group mb-3">
                    <label for="assignmentStatus">Status</label>
                    <!-- Pre-select current status -->
                    <select class="form-select status-select" id="assignmentStatus" name="status">
                        <option value="Not Started" <%= task.status === 'Not Started' ? 'selected' : '' %>>Not Started</option>
                        <option value="In Progress" <%= task.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                        <option value="Completed" <%= task.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                    </select>
                </div>

                <!-- Buttons -->
                <div class="mt-3 d-flex justify-content-between">
                    <!-- Update Assignment button submits the form -->
                    <button class="btn btn-success" type="submit">
                        <i class="fas fa-edit"></i> Update Assignment
                    </button>
                    <!-- Cancel button navigates back to the assignments list without making changes -->
                    <a href="/tasks/list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>