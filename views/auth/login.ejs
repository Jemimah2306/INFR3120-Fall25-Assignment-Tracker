<%- include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>

<div style="text-align: center; margin-top: 50px;">
  <h1>Login</h1>

  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } %>

   <!-- OAuth buttons -->
  <div style="display: flex; justify-content: center; gap: 20px; margin-top: 30px; margin-bottom: 20px;">
    <a href="/auth/google">
      <button class="btn btn-danger" style="padding: 10px 20px;">Login with Google</button>
    </a>
    <a href="/auth/github">
      <button class="btn btn-dark" style="padding: 10px 20px;">Login with GitHub</button>
    </a>
  </div>

  <p>
    Don't have an account? <a href="/auth/register">Register here</a>
  </p>
</div>

<%- include('../partials/footer.ejs') %>
